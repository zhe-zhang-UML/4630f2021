<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_rules_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:background="@drawable/gomoku_background">

    <ImageView
        android:id="@+id/rules_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/rule"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"/>
    <LinearLayout
        android:id="@+id/rules_page_linearlayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rules_image">
        <TextView
            android:id="@+id/rules_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rules_gomoku"
            android:fontFamily="@font/bree_serif"
            android:textColor="#4e342e"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"/>
        <TextView
            android:id="@+id/rules_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rules_gomoku_content1"
            android:fontFamily="@font/mako"
            android:textColor="#827717"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/rules_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rules_gomoku_content2"
            android:fontFamily="@font/mako"
            android:textColor="#827717"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"/>
        <TextView
            android:id="@+id/rules_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rules_gomoku_content3"
            android:fontFamily="@font/mako"
            android:textColor="#827717"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"/>
        <Button
            android:id="@+id/rules_page_back_btn"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="20sp"
            android:textColor="#e0e0e0"
            android:backgroundTint="#8d6e63"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="56dp"/>
    </LinearLayout>
</RelativeLayout>