<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/birthday_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/dyknowimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:src="@drawable/dyknow" />

    <TextView
        android:id="@+id/investPort"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:text="Interests about Me"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"/>


    <Button
        android:id="@+id/MostExperienceButton"
        android:layout_width="270dp"
        android:layout_height="60sp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Most wanted to experience"
        android:layout_weight="1"/>.

    <Button android:id="@+id/FavorAthleteButton"
        android:layout_width="270dp"
        android:layout_height="60sp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Favorite athlete"
        android:layout_weight="1"/>

    <Button android:id="@+id/FavorSingerButton"
        android:layout_width="270dp"
        android:layout_height="60sp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Favorite music singer"
        android:layout_weight="1"/>

</LinearLayout>