<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloud">

    <TextView
        android:id="@+id/gomoku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOMOKU"
        android:textColor="#5d4037"
        android:textSize="52sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"/>
    <ImageButton
        android:id="@+id/sound_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="42dp"
        android:layout_toRightOf="@id/gomoku"
        android:backgroundTint="#f9d696"
        android:scaleType="centerCrop"
        android:src="@drawable/sound"/>
    <ImageButton
        android:id="@+id/mute_btn"
        android:visibility="invisible"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="42dp"
        android:layout_toRightOf="@id/gomoku"
        android:backgroundTint="#f9d696"
        android:scaleType="centerCrop"
        android:src="@drawable/mute"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/gomoku">

        <Button
            android:id="@+id/play_btn"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/play_btn_text"
            android:textSize="28sp"
            android:textColor="#e0e0e0"
            android:backgroundTint="#8d6e63"
            android:layout_gravity="center"
            android:layout_marginTop="72dp"/>
        <Button
            android:id="@+id/rule_btn"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/rule_btn_text"
            android:textSize="28sp"
            android:textColor="#e0e0e0"
            android:backgroundTint="#8d6e63"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"/>
        <Button
            android:id="@+id/setting_btn"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/setting_btn_text"
            android:textSize="28sp"
            android:textColor="#e0e0e0"
            android:backgroundTint="#8d6e63"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"/>
        <Button
            android:id="@+id/about_btn"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/about_btn_text"
            android:textSize="28sp"
            android:textColor="#e0e0e0"
            android:backgroundTint="#8d6e63"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"/>
    </LinearLayout>
</RelativeLayout>